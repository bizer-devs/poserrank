<!doctype html>
<html>
	<head>
		{% block head %}
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Anonymous+Pro">
		<link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
		<title>PoserRank - {% block page %}{% endblock %}</title>
		{% endblock %}
	</head>
	<body>
		<nav class="navbar" role="navigation" aria-label="main navigation">
			<div class="navbar-start">
				<a class="navbar-item" href="{{ url_for('views.index') }}">Home</a>
				<a class="navbar-item" href="{{ url_for('views.top') }}">Top</a>
				{% if 'user' in session %}
					<a class="navbar-item" href="{{ url_for('groups.index') }}">Groups</a>
				{% endif %}
			</div>
			<div class="navbar-end">
				{% if 'user' in session %}
					<a class="navbar-item" href="{{ url_for('views.get_user', id=session['user']['id']) }}">{{ session['user']['username'] }}</a>
					<a class="navbar-item" href="{{ url_for('views.logout') }}">Logout</a>
				{% else %}
					<span class="navbar-item">Guest</span>
					<a class="navbar-item" href="{{ url_for('views.login') }}">Sign in</a>
					<a class="navbar-item" href="{{ url_for('views.new_user') }}">New user</a>
				{% endif %}
			</div>
		</nav>

		<div id="content">{% block content %}{% endblock %}</div>
	</body>
</html>
